<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Analyse de fonction"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etFunctionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="16dp"
            android:hint="Entrez la fonction (ex: x^2 - 4*x + 3)"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/checkboxesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/etFunctionInput"
            android:layout_marginTop="16dp">
            <CheckBox
                android:id="@+id/cbDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ensemble de Définition" />
            <CheckBox
                android:id="@+id/cbParity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parité" />
            <CheckBox
                android:id="@+id/cbContinuity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuité" />
            <CheckBox
                android:id="@+id/cbDerivability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dérivabilité" />
            <CheckBox
                android:id="@+id/cbLimits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limites" />
            <CheckBox
                android:id="@+id/cbAsymptotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asymptotes" />
            <CheckBox
                android:id="@+id/cbVariation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tableau de variation" />
            <CheckBox
                android:id="@+id/cbPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points particuliers et tracé" />

        </LinearLayout>
        <Button
            android:id="@+id/btnAnalyze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/checkboxesLayout"
            android:layout_marginTop="16dp"
            android:text="Analyser" />
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAnalyze"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            />
        <LinearLayout
            android:id="@+id/layoutGraph"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/tvResult"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            />
    </RelativeLayout>
</ScrollView>